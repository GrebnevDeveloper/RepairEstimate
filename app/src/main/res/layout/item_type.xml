<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/text_view_type_name"
        android:layout_width="@dimen/item_type_width"
        android:layout_height="@dimen/item_type_height"
        android:layout_gravity="center"
        android:background="@drawable/item_type_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingEnd="@dimen/base_margin"
        android:paddingStart="@dimen/base_margin"
        android:singleLine="true"
        android:textAppearance="@style/ItemPackageText"
        tools:text="Стены" />
</FrameLayout>