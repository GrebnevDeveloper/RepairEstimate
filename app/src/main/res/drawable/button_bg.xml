<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/button_bg_pressed" />
            <corners android:radius="@dimen/search_flight_button_corners_radius" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/button_bg_disabled" />
            <corners android:radius="@dimen/search_flight_button_corners_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/accent" />
            <corners android:radius="@dimen/search_flight_button_corners_radius" />
        </shape>
    </item>
</selector>